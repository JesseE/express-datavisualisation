body
  padding: 50px;
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif;
h1
  float:left;
  width:100%;
span
  text-align:center;
div.removed span
  -webkit-transform: rotate(90deg);
  width: 100px;
  background: steelblue;
div.added span
  -webkit-transform: matrix(-1, 0, 0, -1, 0, 0);
  -webkit-transform: rotate(-270deg);
  background: crimson;
  width: 100px;
a
  color: #00B7FF;
.added > div
  font: 10px sans-serif;
  background-color: crimson;
  text-align: right;
  padding: 3px;
  margin: 1px;
  color: white;
.removed, .added
  float:left;
  -webkit-transition: color .2s,background .2s;
  transition: color .2s,background .2s;
div.removed
  -webkit-transform: matrix(-1, 0, 0, -1, 0, 0);
div.added
  -webkit-transform: matrix(1, 0, 0, -1, 0, 0);
div.container
  margin-top: 500px;
  width:100%;
  float: left;
  -webkit-transform: rotate(90deg);
  -moz-transform: rotate(90deg);
.removed > div
  font: 10px sans-serif;
  background-color: steelblue;
  text-align: right;
  padding: 3px;
  margin: 1px;
  color: white;
.removed > div:hover
  background: steelblue;
  -webkit-transition: div 0.2s ease-in-out;
  -webkit-transform: scale(2);
.added > div:hover
  background: crimson;
  -webkit-transition: div 0.2s ease-in-out;
  -webkit-transform: scale(2);
div.author
  float: left;
  width:200px;
div.comment
  float: left;
  width: 75%;
body
  padding: 50px
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
h1
  float:left;
  width:100%;
text
  -webkit-transform: rotate(180deg)
a
  color: #00B7FF
.added > div
  font: 10px sans-serif;
  background-color: crimson;
  text-align: right;
  padding: 3px;
  margin: 1px;
  color: white;
.removed, .added
  float:left;
  -webkit-transition: color .2s,background .2s;
  transition: color .2s,background .2s;
div.removed
  -webkit-transform: matrix(-1, 0, 0, -1, 0, 0);
div.added
  -webkit-transform: matrix(1, 0, 0, -1, 0, 0);
div.container
  margin-top: 400px;
  width:100%;
  float: left;
  -webkit-transform: rotate(90deg);
  -moz-transform: rotate(90deg);
.removed > div
  font: 10px sans-serif;
  background-color: steelblue;
  text-align: right;
  padding: 3px;
  margin: 1px;
  color: white;
.removed:hover > div
  opacity: 0.8;
  background: steelblue;
.added:hover > div
  opacity: 0.8;
  background: crimson;
div.author
  float: left;
  width:200px;
div.comment
  float: left;